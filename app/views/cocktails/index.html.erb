<h1 class="text-center">Your cocktail list</h1>

<div class="text-center padded"><%= link_to "Create a cocktail", new_cocktail_path, class: "btn btn-primary" %>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |c| %>
      <div class="col-xs-12 col-sm-4 col-md-3">
        <div class="card text-center">
          <div class="card-header" style="background-image: url('<%= c.picture %>')">
          </div>
          <div class="card-body text-center">
            <p><%= link_to c.name, cocktail_path(c) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



